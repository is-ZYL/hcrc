.user-content{
    height: 560px;
    background-image: url(../../img/reg/bgi.jpg);
    position: relative;
}
.user-content .user-reg{
    position: absolute;
    top: 50%;
    left: 50%;
    width: 480px;
    margin: -210px 0 0 -240px;
    height: 420px;
    background-color: #fff;
}
.user-content .reg-title{
    height: 40px;
    background-color: #F2F2F2;
    border: 1px solid #DADADA;
}
.user-content .reg-title span{
    padding-left: 18px;
    display: block;
    line-height: 40px;
    font-weight: 700;
}
.user-content .reg-content{
    padding: 45px 75px 55px;
}
.reg-content .content-form p{
    margin-bottom: 10px;
}
.reg-content .content-form p label{
    font-weight: 700;
    margin-right: 25px;
    height: 30px;
}
.reg-content .content-form p input{
    padding-left: 15px;
    border: 1px solid #DDDDDD;
    width: 225px;
    height: 30px;
    background-color: #F1F1F1;
}
.reg-content .content-form p:nth-child(2) input{
    width: 135px;
}
.reg-content .content-form p:nth-child(2) label{
    margin-right: 39px;
}.reg-content .content-form p:nth-child(5) input{
    width: 135px;
}
.reg-content .content-form p:nth-child(5) img{
    width: 80px;
    height: 32px;
    margin-left: 5px;
}

.reg-content .content-form p:nth-child(2) .phonecode{
    padding: 0;
    width: 80px;
    margin-left: 5px;
    border: 1px solid #E84626;
    background-color: #fff;
    color: #E84626;
}
.reg-content .content-form .form-protocol{
    font-size: 12px;
    color: #000;
    text-align: center;
    margin-bottom: 15px;
}
.reg-content .content-form .form-protocol a{
    color: #E84626;
}
.reg-content .content-form p:last-child{
    text-align: center;
    padding-left: 43px;
}
.reg-content .content-form p:last-child input:nth-of-type(1){
    padding: 0;
    width: 100px;
    height: 30px;
    background-color: #E84626;
    color: #fff;

}
.reg-content .content-form p:last-child input:nth-of-type(2){
    padding: 0;
    width: 100px;
    height: 30px;
    color: #666666;
    background-color: #fff;
    border: 0;

}
#V_PASSWORD+span{
    display: inline-block;
    color: red;
    position: absolute;
    left: 410px;
    top: 220px;
    font-size: 12px;
}

